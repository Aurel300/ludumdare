{
	"note": "Hey! These are things we want to eventually do in eslint.",

	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"semi": ["error", "always"],
		"eol-last": ["error", "always"],
		"indent": ["error", "tab"],
		"no-mixed-spaces-and-tabs": "error",
		"no-trailing-spaces": "error",
		"no-multi-spaces": "error",
		"no-unused-vars": "error",
		"no-empty-character-class": "error",			// prevents certain regex mistakes
		no-invalid-regexp: "error"						// prevents other regex errors
		no-regex-spaces: "error"						// ja
		
		no-sparse-arrays: "error"						// stop stray commas ['red',,'blue'] in arrays. doesn't affect trailing comma
		
		valid-jsdoc: "error"							// require proper /** JS DOC **/ syntax
	}
}
